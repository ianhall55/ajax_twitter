<h2>New Tweet!</h2>
<form  class="tweet-compose" data-tweets-ul="#feed" >
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea><strong class="counter">140</strong>
  </label>
  <br>

  <label>
    <a href="javascript:void(0)" class="add-mentioned-user">Add Mention</a>
    <div class="mentioned">
    <script type="text/javascript">
      <div>
        <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
        </select>
        <a href="javascript:void(0)" class="remove-mentioned-user">remove</a>
      </div>
    </script>
    </div>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
